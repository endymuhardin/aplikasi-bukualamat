<?xml version="1.0"?>
<!DOCTYPE page-specification PUBLIC
"-//Apache Software Foundation//Tapestry Specification 4.0//EN"
"http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="bukualamat.ui.tapestry.controller.KontakController">
	<property name="k"/>

	<component id="tabelKontak" type="For">
		<binding name="source" value="daftarKontak"/>
		<binding name="value" value="k"/>
		<binding name="element" value="literal:tr"/>
	</component>
	
	<component id="kode" type="Insert">
		<binding name="value" value="k.grup.kode"/>
	</component>
	
	<component id="nama" type="Insert">
		<binding name="value" value="k.nama"/>
	</component>
	
	<component id="email" type="Insert">
		<binding name="value" value="k.email"/>
	</component>
	
	<component id="mobile" type="Insert">
		<binding name="value" value="k.mobile"/>
	</component>
	
	<component id="phone" type="Insert">
		<binding name="value" value="k.phone"/>
	</component>

</page-specification>
