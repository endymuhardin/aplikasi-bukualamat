<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.0.3.xsd">

	<http auto-config="true">
		<intercept-url pattern="/grup/list.asp*/**" access="ROLE_USER" />
		<intercept-url pattern="/grup/edit/**" access="ROLE_ADMIN" />
		<intercept-url pattern="/grup/simpan/**" access="ROLE_ADMIN" />
		<intercept-url pattern="/index.html/**" access="ROLE_USER" />
		<intercept-url pattern="/**" filters="none" />
		
		<form-login login-page="/login.html" default-target-url="/app"/>
	</http>

	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="endy" password="admin" authorities="ROLE_USER, ROLE_ADMIN" />
				<user name="jimi" password="user" authorities="ROLE_USER" />
			</user-service>
		</authentication-provider>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource" />
		</authentication-provider>
	</authentication-manager>

</beans:beans>